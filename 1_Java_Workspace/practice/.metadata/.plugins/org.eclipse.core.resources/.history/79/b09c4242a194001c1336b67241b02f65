
public class practice_everyday01 {
	public static void main(String[] args) {	
		
		// StringBuffer
		
		// 1) append()
		StringBuffer sb1 = new StringBuffer();
		sb1.append("a"); // str
		sb1.append('1'); // char
		sb1.append(2);   // int
		System.out.println(sb1);
		
		// StringBuffer에 기본생성자의 최초 capacity는 16으로 설정되어있음
		
		
		
	}
}